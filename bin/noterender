#!/usr/bin/env python
"""
Usage:
    noterender --src=<path> --dst=<dir>
    noterender (-h | --help)

Options:
    --src=<path>    Source path
    --dst=<dir>     Output directory
    -h --help       Shows this page
"""


import docopt
from noterender import render_directory


def main():
    args = docopt.docopt(__doc__)
    render_directory(
        src=args['--src'],
        dst=args['--dst'],
    )


if __name__ == '__main__':
    main()
